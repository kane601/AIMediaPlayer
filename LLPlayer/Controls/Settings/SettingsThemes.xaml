<UserControl x:Class="AIMediaPlayer.Controls.Settings.SettingsThemes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AIMediaPlayer.Controls.Settings"
             xmlns:vm="clr-namespace:AIMediaPlayer.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:SettingsThemes}"
             d:Foreground="White"
             d:Background="Black"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <StackPanel
            x:Key="ColorPickerDialog"
            Margin="10"
            Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="0 0 10 0"
                    Text="Current Color"
                    VerticalAlignment="Center"/>
                <Rectangle
                    Margin="0 0 10 0"
                    Width="20"
                    Height="20"
                    Fill="{Binding PickerColor, Converter={StaticResource ColorToBrushConv}}"
                    VerticalAlignment="Center"/>
                <TextBlock Text="#" VerticalAlignment="Center"/>
                <TextBox
                    Margin="2 0 10 0"
                    Width="50"
                    MaxLength="6"
                    PreviewTextInput="ValidationHex"
                    VerticalAlignment="Center">
                    <TextBox.Text>
                        <Binding
                            Path="PickerColor"
                            Converter="{StaticResource ColorToHexConv}"
                            UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <local:ColorHexRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>

            <materialDesign:ColorPicker
                Color="{Binding PickerColor, Delay=15}"
                Width="400"
                Height="150"
                Margin="0 20 0 0" />

            <StackPanel
                Margin="10"
                Orientation="Horizontal"
                HorizontalAlignment="Center">
                <Button
                    Margin="0 0 20 0"
                    Width="80"
                    Content="OK"
                    FontWeight="ExtraBold"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    CommandParameter="apply" />
                <Button
                    Width="80"
                    Content="Cancel"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    CommandParameter="cancel" />
            </StackPanel>
        </StackPanel>

    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel>
            <TextBlock
                Text="Themes"
                FontSize="24"
                FontWeight="Bold"
                Margin="0 0 0 16" />

            <GroupBox Header="Themes">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 16">
                        <TextBlock
                            Width="180"
                            Text="Primary Color" />

                        <Button
                            Background="{x:Null}"
                            Padding="0"
                            BorderThickness="0"
                            materialDesign:DialogHost.DialogOpenedAttached="ColorPickerDialog_Primary_OnDialogOpened"
                            materialDesign:DialogHost.DialogClosedAttached="ColorPickerDialog_OnDialogClosed"


                            Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                            CommandParameter="{StaticResource ColorPickerDialog}">

                            <Rectangle
                                Fill="{Binding FL.Config.Theme.PrimaryColor, Converter={StaticResource ColorToBrushConv}}"
                                Width="30"
                                Height="30" />
                        </Button>

                        <TextBlock Margin="10 0 0 0" Text="#" />

                        <TextBox Width="50" MaxLength="6" PreviewTextInput="ValidationHex">
                            <TextBox.Text>
                                <Binding
                                    Path="FL.Config.Theme.PrimaryColor"
                                    Converter="{StaticResource ColorToHexConv}"
                                    UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <local:ColorHexRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 0 0 16">
                        <TextBlock
                            Width="180"
                            Text="Secondary Color" />

                        <Button
                            Background="{x:Null}"
                            Padding="0"
                            BorderThickness="0"
                            materialDesign:DialogHost.DialogOpenedAttached="ColorPickerDialog_Secondary_OnDialogOpened"
                            materialDesign:DialogHost.DialogClosedAttached="ColorPickerDialog_OnDialogClosed"
                            Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                            CommandParameter="{StaticResource ColorPickerDialog}">

                            <Rectangle
                                Fill="{Binding FL.Config.Theme.SecondaryColor, Converter={StaticResource ColorToBrushConv}}"
                                Width="30"
                                Height="30" />
                        </Button>

                        <TextBlock Margin="10 0 0 0" Text="#" />

                        <TextBox Width="50" MaxLength="6" PreviewTextInput="ValidationHex">
                            <TextBox.Text>
                                <Binding
                                    Path="FL.Config.Theme.SecondaryColor"
                                    Converter="{StaticResource ColorToHexConv}"
                                    UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <local:ColorHexRule />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="OS">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Width="180">
                            Dark Title Bar
                            <InlineUIContainer BaselineAlignment="Center" Cursor="Help">
                                <ToolTipService.ToolTip>
                                    <TextBlock
                                        Text="Required to restart to apply changes"
                                        TextWrapping="Wrap"
                                        MaxWidth="400" />
                                </ToolTipService.ToolTip>
                                <materialDesign:PackIcon
                                    Kind="Information"
                                    Width="16" Height="16"
                                    Margin="4 0 0 0" />
                            </InlineUIContainer>
                        </TextBlock>
                        <ToggleButton
                            IsChecked="{Binding FL.Config.IsDarkTitlebar}" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
