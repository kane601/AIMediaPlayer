<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFrameworks>net9.0-windows10.0.18362.0</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <LangVersion>latest</LangVersion>
    <AssemblyName>WpfColorFontDialog</AssemblyName>
    <RootNamespace>WpfColorFontDialog</RootNamespace>
    <Copyright>Copyright ©  2025</Copyright>
    <Version>1.0.8.0</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageReleaseNotes>Added .NET Core 3.1 support.</PackageReleaseNotes>
    <RepositoryUrl>https://www.donemax.com/</RepositoryUrl>
    <PackageProjectUrl>https://www.donemax.com/</PackageProjectUrl>
    <Description>A wpf color and font picker.</Description>
    <Authors>donemax</Authors>
    <Company></Company>
    <PackageTags>wpf font dialog color</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="resources\colorfont_icon.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="resources\colorfont_icon.png" />
  </ItemGroup>

</Project>
